---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactImage from '../assets/Contact Us Image.jpg';

// Check for success message in the URL
const url = new URL(Astro.request.url);
const success = url.searchParams.get('success');
const error = url.searchParams.get('error');
---

<Layout>
	<Header />
	<main>
		<section class="contact-section">
			<div class="container">
				<div class="contact-grid">
					<div class="contact-info">
						<h1 class="slide-up">Contact Us</h1>
						
						<p class="description slide-up stagger-1">Have questions or need support? We're here to help! Reach out to us anytime.</p>
						
						<div class="contact-details slide-up stagger-2">
							<div class="contact-detail">
								<span class="label">Email:</span>
								<span class="value">ccthegymgeeks@gmail.com</span>
							</div>
						</div>
						
						<div class="social-links slide-up stagger-3">
							<span class="follow-us">Follow Us:</span>
							<a href="https://instagram.com" target="_blank" rel="noopener noreferrer">Instagram</a>
							<a href="https://twitter.com" target="_blank" rel="noopener noreferrer">Twitter</a>
							<a href="https://facebook.com" target="_blank" rel="noopener noreferrer">Facebook</a>
						</div>
						
						<div class="chatbot-info slide-up stagger-4">
							<span class="need-help">Need help now?</span> <a href="https://www.thegymgeeks.com">Chat with our personal fitness chatbot in the app!</a>
						</div>
						
						{success && (
							<div class="alert success slide-up">
								<p>Thank you for your message! We'll get back to you soon.</p>
							</div>
						)}
						
						{error && (
							<div class="alert error slide-up">
								<p>Sorry, there was an error submitting your message. Please try again later or email us directly.</p>
							</div>
						)}
						
						<form action="https://formsubmit.co/ccthegymgeeks@gmail.com" method="POST" class="contact-form slide-up stagger-5">
							<!-- Formsubmit configuration -->
							<input type="hidden" name="_redirect" value="/thank-you" />
							<input type="text" name="_honey" style="display:none" />
							
							<div class="name-fields">
								<div class="form-group">
									<label for="firstName">First Name</label>
									<input type="text" id="firstName" name="first-name" placeholder="" required>
								</div>
								<div class="form-group">
									<label for="lastName">Last Name</label>
									<input type="text" id="lastName" name="last-name" placeholder="" required>
								</div>
							</div>
							<div class="form-group">
								<label for="email">Email <span class="required-label">(required)</span></label>
								<input type="email" id="email" name="email" placeholder="" required>
							</div>
							<div class="form-group">
								<label for="message">Message <span class="required-label">(required)</span></label>
								<textarea id="message" name="message" rows="6" placeholder="" required></textarea>
							</div>
							<button type="submit" class="btn-primary">Send Message</button>
						</form>
					</div>
					
					<div class="image-container">
						<img src={ContactImage.src} alt="Fitness training support" class="contact-image">
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	main {
		margin-top: 80px; /* Accommodate for fixed header */
		background-color: #f8fafc;
	}

	.container {
		width: 100%;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.contact-section {
		padding: 4rem 0 6rem;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 0.8fr 1.2fr;
		gap: 3rem;
		align-items: start;
	}

	.contact-info {
		padding-right: 2rem;
	}

	h1 {
		font-size: 3.5rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
		color: #1a1a1a;
		line-height: 1.1;
	}

	.description {
		font-size: 1.15rem;
		color: #333;
		line-height: 1.6;
		margin-bottom: 2.5rem;
	}

	.contact-details {
		margin-bottom: 2.5rem;
	}

	.contact-detail {
		margin-bottom: 1rem;
	}

	.label {
		font-weight: 600;
		color: #333;
		display: block;
		margin-bottom: 0.25rem;
	}

	.value {
		color: #555;
		display: block;
	}

	.social-links {
		margin-bottom: 2.5rem;
	}

	.follow-us {
		font-weight: 600;
		color: #333;
		margin-right: 1rem;
	}

	.social-links a {
		color: #555;
		text-decoration: none;
		margin-right: 1rem;
		position: relative;
	}

	.social-links a:after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 1px;
		background-color: #333;
		transition: width 0.3s ease;
	}

	.social-links a:hover {
		color: #333;
	}

	.social-links a:hover:after {
		width: 100%;
	}

	.chatbot-info {
		margin-bottom: 2.5rem;
		color: #555;
	}

	.need-help {
		font-weight: 600;
		color: #333;
	}

	.chatbot-info a {
		color: #333;
		text-decoration: none;
		font-weight: 500;
		position: relative;
	}

	.chatbot-info a:after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 100%;
		height: 1px;
		background-color: #333;
		transition: width 0.3s ease;
	}

	.chatbot-info a:hover {
		color: #111;
	}

	.contact-form {
		margin-top: 2rem;
	}

	.name-fields {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.form-group {
		margin-bottom: 1.25rem;
	}

	label {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: 500;
		color: #333;
	}

	input[type="text"],
	input[type="email"],
	textarea {
		width: 100%;
		padding: 0.75rem;
		border: 1px solid #ddd;
		border-radius: 4px;
		background-color: #fff;
		font-size: 1rem;
		transition: border-color 0.3s ease;
	}

	input[type="text"]:focus,
	input[type="email"]:focus,
	textarea:focus {
		border-color: #333;
		outline: none;
	}

	.required-label {
		color: #666;
		font-size: 0.9rem;
		font-weight: normal;
	}

	.btn-primary {
		background-color: #333;
		color: white;
		border: none;
		padding: 0.85rem 2rem;
		border-radius: 4px;
		font-weight: 600;
		font-size: 1rem;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	.btn-primary:hover {
		background-color: #111;
	}

	.image-container {
		width: 100%;
		height: 100%;
	}

	.contact-image {
		width: 100%;
		height: auto;
		border-radius: 8px;
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
	}

	.alert {
		padding: 1rem;
		border-radius: 4px;
		margin-bottom: 1.5rem;
		font-weight: 500;
	}

	.alert p {
		margin: 0;
		font-size: 1rem;
	}

	.success {
		background-color: #e6f7ea;
		color: #2c653e;
		border: 1px solid #c3e6cb;
	}

	.error {
		background-color: #f8d7da;
		color: #721c24;
		border: 1px solid #f5c6cb;
	}

	/* Animations for form and form elements */
	.contact-form .form-group,
	.contact-form button {
		opacity: 1;
		transform: translateY(0);
	}

	body.js-enabled .contact-form .form-group,
	body.js-enabled .contact-form button {
		opacity: 0;
		transform: translateY(20px);
	}

	.section-animate .contact-form .form-group,
	.section-animate .contact-form button {
		animation: formElementsSlideUp 0.8s ease-out forwards;
	}

	.section-animate .contact-form .form-group:nth-child(1) {
		animation-delay: 0.1s;
	}

	.section-animate .contact-form .form-group:nth-child(2) {
		animation-delay: 0.2s;
	}

	.section-animate .contact-form .form-group:nth-child(3) {
		animation-delay: 0.3s;
	}

	.section-animate .contact-form button {
		animation-delay: 0.4s;
	}

	@keyframes formElementsSlideUp {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Responsive styles */
	@media (max-width: 900px) {
		.contact-grid {
			grid-template-columns: 1fr;
		}
		
		.contact-info {
			padding-right: 0;
			order: 2;
		}
		
		.image-container {
			order: 1;
			margin-bottom: 2rem;
		}
		
		h1 {
			font-size: 2.8rem;
		}
	}

	@media (max-width: 600px) {
		.name-fields {
			grid-template-columns: 1fr;
		}
		
		h1 {
			font-size: 2.4rem;
		}
	}
</style> 